{
  "expo": {
    "name": "Ommio",
    "slug": "ommio",
    "scheme": "ommioapp",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/Logo/Icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "ios": {
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-2340385969287749~2566319123" 
      },
      "icon": "./assets/ommio_icon.icon",
      "supportsTablet": true,
      "buildNumber": "1",
      "bundleIdentifier": "com.seninadin.ommio",
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.seninadin.ommio.widget"
        ]
      },
      "userInterfaceStyle": "automatic",
      "newArchEnabled": true, 
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification", "fetch"]
      }
    },
    "android": {
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/Logo/Icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
            "googleMobileAdsAppId": "ca-app-pub-2340385969287749~2530111366"
        },
      "newArchEnabled": true,
      "package": "com.seninadin.ommio",
      "permissions": [
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "name": "Ommio",
      "favicon": "./public/favicon.ico",
      "bundler": "metro",
      "output": "static",
      "display": "standalone",
      "backgroundColor": "#ffffff",
      "description": "Ommio: Zaman Yönetimi ve Görev Takibi"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/Logo/Icon.png",
          "color": "#6366F1",
          "sounds": []
        }
      ],
      ["react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-2340385969287749~2530111366", 
          "iosAppId": "ca-app-pub-2340385969287749~2566319123"
        }
      ],
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "OmmioWidget",
              "label": "Ommio Günlük Özet",
              "minWidth": "320dp",
              "minHeight": "200dp",
              "description": "Bugünkü görevlerini ve alışkanlıklarını gör.",
              "previewImage": "./assets/widget-preview.png"
            }
          ]
        }
      ],
      "expo-localization",
      [
        "expo-router",
        {
          "origin": "https://ommio.app"
        }
      ],
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "7832bf0f-431f-4ea0-a0ed-5cb9f87d70d5"
      }
    }
  }
}