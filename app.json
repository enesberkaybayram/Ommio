{
  "expo": {
    "name": "Ommio",
    "slug": "ommio",
    "scheme": "ommioapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Logo/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8FAFC"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seninadin.ommio",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Logo/Icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.seninadin.ommio"
    },
    "web": {
      "name": "Ommio",
      "favicon": "./public/favicon.ico",
      "bundler": "metro",
      "output": "static",
      "display": "standalone",
      "backgroundColor": "#ffffff",
      "description": "Ommio: Zaman Yönetimi ve Görev Takibi"
    },

    
    "plugins": [
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "OmmioWidget",
              "label": "Ommio Günlük",
              "minWidth": "280dp",
              "minHeight": "140dp"
            }
          ]
        }
      ],
      "expo-localization",
      "expo-router",
        {
          "origin": "https://www.ommio.app"
        },
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "7832bf0f-431f-4ea0-a0ed-5cb9f87d70d5"
      }
    }
  }
}
