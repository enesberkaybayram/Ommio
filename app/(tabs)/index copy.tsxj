            // GÃ¼venlik iÃ§in "Yeni bir mesajÄ±n var" yazdÄ±rÄ±yoruz.
            await sendPushNotification(
                targetData.pushToken,
                `ðŸ’¬ ${user.displayName || user.username}`,
                "ðŸ”’ Yeni ÅŸifreli mesaj", 
                { type: 'message', senderId: user.uid }
            );
        }
    }
